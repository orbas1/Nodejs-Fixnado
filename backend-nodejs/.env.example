NODE_ENV=development
PORT=4000

# Core database configuration (non-secret defaults for local usage)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fixnado
DB_USER=fixnado_service
DB_DIALECT=postgres

# Secrets such as DB_PASSWORD, JWT_SECRET, STRIPE_SECRET_KEY, and SMTP_PASSWORD
# are sourced from AWS Secrets Manager in all shared environments. Uncomment
# only when running completely offline and never commit populated values.
# DB_PASSWORD=
# JWT_SECRET=

# AWS Secrets Manager integration
SECRETS_MANAGER_ENABLED=true
SECRETS_MANAGER_REGION=eu-west-2
SECRETS_MANAGER_SECRET_IDS=fixnado/staging/api,fixnado/shared/integrations
SECRETS_MANAGER_REFRESH_INTERVAL_SECONDS=900
SECRETS_MANAGER_PREFER_LOCAL=false
SECRETS_MANAGER_FAIL_FAST=true

# Security audit logging
SECURITY_AUDIT_ENABLED=true
SECURITY_AUDIT_WEBHOOK_URL=
SECURITY_AUDIT_WEBHOOK_TOKEN=
SECURITY_AUDIT_SAMPLE_RATE=1
SECURITY_AUDIT_HTTP_TIMEOUT_MS=2000
SECURITY_AUDIT_DROP_METADATA_KEYS=accessToken,refreshToken

# Finance alert fan-out configuration
FINANCE_ALERTS_ENABLED=true
FINANCE_ALERTS_POLL_MINUTES=10
FINANCE_ALERTS_REPEAT_MINUTES=30
# Provide at least one downstream channel when enabling alerts
FINANCE_ALERTS_SLACK_WEBHOOK=
FINANCE_ALERTS_ESCALATE_SEVERITIES=critical,high
# Optional Opsgenie overrides (supply values when directing alerts to Opsgenie)
FINANCE_ALERTS_OPSGENIE_API_KEY=
FINANCE_ALERTS_OPSGENIE_TEAM=
FINANCE_ALERTS_OPSGENIE_RESPONDERS=
FINANCE_ALERTS_OPSGENIE_PRIORITY=P2
